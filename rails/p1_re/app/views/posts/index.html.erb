<style>
  div {}

  .background {
    background-image: url(https://i.pinimg.com/474x/88/2a/d4/882ad49d75925177f7c5d9065f02975b.jpg);
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>

<div class="background">
  <div class="mx-auto" style="width: 1000px;">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">
            <p class="text-center">게시글</p>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |p| %>
        <tr></tr>
        <td>
         <h5 >제목 : <%= link_to p.title, post_path(p.id) %></h5>
              <span style="float:left;">작성자 : <%= p.user.email %> </span> <span style="float:right;">조회수: <%= p.hit  %>
                </p></span>
              <br /><br />
          <div class="media">
            <% if p.avatar.url %>
            <p><%= image_tag p.avatar.url, style: "width:200px; height:150px;", class: "align-self-center mr-3" %></p>
            <% end %>
            <div class="media-body">
              <p class="mt-0"><%= p.body %></p>
            </div>
          </div>
          <tr></tr>
          <% end %>
      </tbody>
    </table>


    <% if current_user %>
    <div style="text-align:right;">
      <button><%= link_to "게시글작성", new_post_path %></button>
    </div>
    <% end %>
  </div>
</div>