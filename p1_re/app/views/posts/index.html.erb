    </div>  
  </div>

	  <tr></tr>
	  <% end %>  
    </tbody>
  </table>
  <% if current_user %>
    <div style="text-align:right;">
	    <button><%= link_to "게시글작성", new_post_path %></button>
    </div>
  <% end %>
</div>
</div>
