<div class="background">
<div class="mx-auto" style="width: 1000px;">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col"><p class="text-center">게시글</p></th>
      </tr>
    </thead>

   <tbody>
   <% @posts.each do |p| %>
  	<tr></tr>
  	<td>
   <div class="media">
    <div class="media-body">
      <h5 class="mt-0">제목 : <%= link_to p.title, post_path(p.id) %></h5>
      <span style="float:left;">작성자 : <%= p.user.email %> </span> <span style="float:right;">조회수: <%= p.hit  %></p></span>
